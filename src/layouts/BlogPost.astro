---
import BaseHead from '../components/BaseHead.astro';

import { IconChevronLeft } from '@tabler/icons';
import { CalendarIcon, TagIcon, ClockIcon } from '@heroicons/react/24/solid';

import '../styles/base.css';
import { Footer } from '../components/Footer';
import { Header } from '../components/Header';

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    tags?: string[];
    minutesRead: string;
  };
}

const {
  content: { title, description, pubDate, tags, minutesRead }
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body class="transition-colors duration-500 dark:bg-slate-700">
    <Header client:load />
    <div class="px-6 py-8 md:mx-auto lg:max-w-screen-lg">
      <a
        href="/blog"
        role="button"
        class="mb-6 inline-flex items-center rounded-md bg-gray-600 py-2 pl-2 pr-4 text-gray-100 hover:text-gray-400 dark:bg-gray-800 dark:text-gray-400 dark:hover:text-gray-200"
      >
        <IconChevronLeft client:only="react" />
        <span class="text-sm font-medium">Voltar</span>
      </a>

      <main>
        <div class="mb-8 border-b border-gray-300 pb-6 dark:border-slate-700">
          <div class="mb-2">
            <h1 class="text-4xl font-bold text-gray-600 dark:text-gray-100">
              {title}
            </h1>

            <div class="text-base font-thin text-gray-500 dark:text-gray-300">
              {description}
            </div>
          </div>

          <div
            class="mb-1 flex items-center gap-x-2 text-gray-600 dark:text-gray-400"
          >
            <CalendarIcon className="h-6 w-6" client:only="react" />
            <div class="mt-1">{pubDate}</div>
          </div>

          <div class="mb-1 flex items-center gap-x-1">
            <TagIcon
              className="mr-1 h-6 w-6 text-gray-600 dark:text-gray-400 "
              client:only="react"
            />
            <div class="flex items-center gap-x-2">
              {
                tags?.map((tag) => (
                  <a
                    class="rounded bg-blue-400 px-2 text-white hover:bg-blue-500 dark:border dark:border-gray-600 dark:bg-slate-600 dark:hover:bg-slate-700"
                    href={`/tags/${tag.toLowerCase()}`}
                  >
                    {tag}
                  </a>
                ))
              }
            </div>
          </div>

          <div
            class="flex items-center gap-x-1 text-gray-600 dark:text-gray-400"
          >
            <ClockIcon className="h-6 w-6" client:only="react" />
            <div class="mt-1">{minutesRead}</div>
          </div>
        </div>

        <div class="prose text-lg text-gray-800 dark:text-gray-300">
          <slot />
        </div>
      </main>

      <Footer client:only="react" />
    </div>
  </body>
</html>
