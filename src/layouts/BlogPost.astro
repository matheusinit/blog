---
import BaseHead from "../components/BaseHead.astro";

import { CalendarIcon, TagIcon, ClockIcon } from "@heroicons/react/24/solid";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    tags?: string[];
    minutesRead: string;
  };
}

import "../styles/base.css";
import { Footer } from "../components/Footer";

const {
  content: { title, description, pubDate, tags, minutesRead },
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body class="md:max-w-screen-md md:mx-auto px-6 py-8">
    <main>
      <div class="mb-8 border-b pb-6 border-gray-300">
        <div class="mb-2">
          <h1 class="text-4xl font-bold text-gray-600">
            {title}
          </h1>

          <div class="text-base text-gray-500 font-thin">{description}</div>
        </div>

        <div class="flex items-center gap-x-2 mb-1 text-gray-600">
          <CalendarIcon className="h-6 w-6" />
          <div class="mt-1">{pubDate}</div>
        </div>

        <div class="flex items-center gap-x-1 mb-1">
          <TagIcon className="h-6 w-6 text-gray-600 mr-1" />
          <div class="flex items-center">
            {
              tags?.map((tag) => (
                <a
                  class="bg-blue-400 text-white px-2 rounded hover:text-gray-900"
                  href={`/tags/${tag.toLowerCase()}`}
                >
                  {tag}
                </a>
              ))
            }
          </div>
        </div>

        <div class="flex items-center gap-x-1 text-gray-600">
          <ClockIcon className="h-6 w-6" />
          <div class="mt-1">{minutesRead}</div>
        </div>
      </div>

      <div class="text-gray-800 text-lg prose">
        <slot />
      </div>
    </main>

    <Footer />
  </body>
</html>
