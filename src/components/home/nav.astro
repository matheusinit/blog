  <ul class="flex gap-x-4">
    <li
      class={clsx(
        pathname === '/' && 'underline',
        'underline-offset-4 hover:underline'
      )}
    >
      <a href="/">Home</a>
    </li>

    <li
      class={clsx(
        pathname === '/blog' && 'underline',
        'underline-offset-4 hover:underline'
      )}
    >
      <a href="/blog">Blog</a>
    </li>

    <li
      class={clsx(
        pathname === '/experience' && 'underline',
        'underline-offset-4 hover:underline'
