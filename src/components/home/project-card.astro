---
type Props = {
  title: string;
  description: string;
  language: string;
  href?: string;
};

const { title, description, language, href = "/" } = Astro.props;
---

<a href={href} target="_blank">
  <div
    class="border bg-app-violet-dark/95 border-app-violet-base h-36 rounded-md p-4 cursor-pointer hover:bg-app-violet-darker hover:border-app-violet-darker transition-colors"
  >
    <div class="flex flex-col h-full">
      <span class="font-medium text-lg text-app-red-base">{title}</span>

      <p class="text-sm mt-1 text-gray-300 flex-auto">
        {description}
      </p>

      <div class="mt-3 flex items-center gap-x-2 text-gray-300">
        <span>â€¢</span>
        <span class="text-sm">{language}</span>
      </div>
    </div>
  </div>
</a>
