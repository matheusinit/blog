---
type Props = {
  title: string;
  description: string;
  language: string;
  href?: string;
};

const { title, description, language, href = '/' } = Astro.props as Props;
---

<a href={href} target="_blank" rel="noreferrer">
  <div
    class="bg-app-gray-darker/10 hover:bg-app-gray-dark dark:border-app-violet-base dark:bg-app-violet-dark/95 dark:hover:border-app-violet-darker dark:hover:bg-app-violet-base h-36 cursor-pointer rounded-lg border border-gray-300 px-4 py-2.5 transition-colors"
  >
    <div class="flex h-full flex-col">
      <span class="text-regular text-app-red-light dark:text-app-red-base font-medium">{title}</span>

      <p class="mt-1 flex-auto text-sm dark:text-gray-300">
        {description}
      </p>

      <div class="mt-2.5 flex items-center gap-x-2 dark:text-gray-300">
        <span>â€¢</span>
        <span class="text-sm">{language}</span>
      </div>
    </div>
  </div>
</a>
