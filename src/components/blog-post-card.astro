---
const { title, description, date } = Astro.props;

import dayjs from "dayjs";

function formatDate(dateString: string) {
  return dayjs(dateString).format("DD [de] MMMM [de] YYYY");
}
---

<div class="flex items-center space-x-3">
  <div class="absolute w-[2px] h-36 bg-blue-600 rounded-sm"></div>

  <div class="flex flex-col gap-y-2">
    <div class="text-secondary-foreground text-xs">{formatDate(date)}</div>
    <div class="text-[22px] font-semibold text-primary-foreground">
      {title}
    </div>
    <div class="text-secondary-foreground">
      {description}
    </div>
  </div>
</div>
