---
import ArrowTopRightOnSquare from 'astro-heroicons/solid/ArrowTopRightOnSquare.astro';

const { name, description } = Astro.props;

---
<div class="flex w-[21.875em] flex-col space-y-2 rounded-md bg-white p-2">
  <div class="flex items-center justify-between">
    <h5>{name}</h5>

    <a href="https://github.com/matheusinit/blog/tree/3.0" target="_blank" rel="noreferrer">
      <div class="flex items-center space-x-1 text-gray-700">
        <span class="text-xs underline">
          Projeto
        </span>

        <ArrowTopRightOnSquare class="size-3" />
      </div>
    </a>

  </div>

  <p class="text-medium-gray">{description}</p>
</div>
