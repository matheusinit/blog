---
import clsx from 'clsx'

type Props = {
  href: string
}

const { pathname: currentPathname } = Astro.url

const { href } = Astro.props as Props

const classProps = clsx('hover:text-dark-gray', href === currentPathname ? 'text-dark-gray' : 'text-light-gray')

---

<a href={href} class={classProps}>
  <slot />
</a>
