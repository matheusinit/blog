---
import clsx from "clsx";

const { pathname: currentPathname } = Astro.url;
const { href } = Astro.props as Props;

type Props = {
  href: string;
};

const classProps = clsx(
  "font-medium transition-colors flex items-center focus-visible:outline-none py-2 px-3 hover:bg-accent rounded-md focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-primary-foreground",
  href === currentPathname
    ? "text-primary-foreground"
    : "text-secondary-foreground",
);
---

<a href={href} class={classProps}>
  <slot />
</a>
