---
import clsx from "clsx";

const { class: twClass, ...props } = Astro.props as Props;

type Props = {
  href?: string;
  class?: string;
  target?: "_blank";
  rel?: "noopener noreferrer";
};

const mergedClass = clsx(
  "font-medium transition-colors flex items-center focus-visible:outline-none py-2 px-3 rounded-md focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-primary-foreground",
  twClass,
);
---

<a class={mergedClass} {...props}>
  <slot />
</a>
