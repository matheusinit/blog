---
import '../styles/base.css';
import BaseHead from './BaseHead.astro';
import HeaderStatic from './HeaderStatic.astro';

const { title } = Astro.props;
---

<head>
  <BaseHead title={title} />
</head>
<body class="bg-app-gray-base text-neutral-700 transition-colors dark:bg-app-violet-dark dark:text-gray-50">
  <div class="mx-auto h-full w-full md:max-w-screen-md">
    <HeaderStatic />

    <div class="px-4 md:mt-4 md:px-0">
      <slot />
    </div>
  </div>
</body>
